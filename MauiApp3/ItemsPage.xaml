<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.ItemsPage"
             BackgroundColor="#A4B8C8">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        
        <!-- Заголовок -->
        <Frame Grid.Row="0" 
               BackgroundColor="#E8C4BC" 
               CornerRadius="15" 
               HasShadow="True"
               Padding="20"
               Margin="0,0,0,20">
            <Label x:Name="TitleLabel" 
                   FontSize="28" 
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Center"/>
        </Frame>

        <!-- Список вещей -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="15">
                <CollectionView x:Name="ItemsCollection" 
                              SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="#E8C4BC" 
                                   CornerRadius="15" 
                                   HasShadow="True"
                                   Padding="15"
                                   Margin="0,0,0,10">
                                <HorizontalStackLayout Spacing="15">
                                    <CheckBox IsChecked="{Binding IsChecked}"
                                            Color="Black"
                                            VerticalOptions="Center"
                                            CheckedChanged="OnCheckBoxChanged"/>
                                    <Label Text="{Binding Name}" 
                                           FontSize="18"
                                           TextColor="Black"
                                           VerticalOptions="Center"
                                           HorizontalOptions="FillAndExpand"
                                           TextDecorations="{Binding TextDecoration}"/>
                                </HorizontalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Кнопки управления -->
        <VerticalStackLayout Grid.Row="2" Spacing="15" Margin="0,20,0,0">
            
            <!-- Кнопка добавления вещи -->
            <Frame BackgroundColor="#6B7F8F" 
                   CornerRadius="15" 
                   HasShadow="True"
                   Padding="15">
                <Label Text="Добавить вещь" 
                       FontSize="20" 
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"/>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnAddItemClicked"/>
                </Frame.GestureRecognizers>
            </Frame>

            <!-- Кнопка сброса галочек -->
            <Frame BackgroundColor="#8B9BA8" 
                   CornerRadius="15" 
                   HasShadow="True"
                   Padding="15">
                <Label Text="Сбросить все галочки" 
                       FontSize="18" 
                       TextColor="White"
                       HorizontalOptions="Center"/>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnResetAllClicked"/>
                </Frame.GestureRecognizers>
            </Frame>

        </VerticalStackLayout>

    </Grid>

</ContentPage>